{% extends 'admin/base.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_index') }}">Strona główna</a></li>
    <li><a href="{{ path('admin_index') }}#products">Produkty</a></li>
    <li><a href="{{ path('admin_product_collections', {'type': productCollection.getProductType().getId()}) }}">{{ productCollection.getProductType().getName() }}</a></li>
    <li class="active">{% if productCollection.getId() %}{{ productCollection.getName() }}{% else %}Nowa kolekcja{% endif %}</li>
{% endblock %}

{% block body %}
    {% if productCollection.getId() %}
        <p><a href="{{ path('admin_add_product_collection', {'typeId': productCollection.getProductType().getId()}) }}" class="btn btn-default" role="button">Dodaj nową kolekcję</a></p>
    {% endif %}

    <h1>{% if productCollection.getId() %}Edycja kolekcji produktów{% else %}Nowa kolekcja produktów{% endif %}</h1>

    {% form_theme form 'form/fields.html.twig' %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}
