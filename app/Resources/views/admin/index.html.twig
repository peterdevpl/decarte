{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Produkty</h3>
            </div>
            <div class="panel-body">
                <ul>
                    {% for type in productTypes %}
                        <li><a href="{{ path('admin_product_collections', {'type': type.getId()}) }}">{{ type.getName() }}</a></li>
                    {% endfor %}
                </ul>
                <p>
                    <a href="{{ path('admin_add_product_type') }}" class="btn btn-success" role="button">Dodaj nowy typ produktu</a>
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Strony</h3>
            </div>
            <div class="panel-body">
                <ul>
                    {% for page in pages %}
                        <li><a href="{{ path('admin_editpage', {'pageId': page.getId()}) }}">{{ page.getTitle() }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
