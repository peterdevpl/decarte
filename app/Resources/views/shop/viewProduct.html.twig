{% extends 'baseSidebar.html.twig' %}

{% block contents %}
    {% set productCollection = product.getProductSeries().getProductCollection() %}

    <nav>
        <a href="{{ path('default') }}">Strona główna</a> &raquo;
        <a href="{{ path('shop_list_collections') }}">Zaproszenia ślubne</a> &raquo;
        <a href="{{ path('shop_view_collection', {'slugName': productCollection.getSlugName()}) }}">{{ productCollection.getName }}</a> &raquo;
        Model zaproszenia: {{ product.getName() }}
    </nav>

    <hr>

    <h1 class="product_name">{{ productCollection.getName() }} - Model zaproszenia: {{ product.getName() }}</h1>

    <p class="short_description">{{ product.getDescriptionSEO() }}</p>

    <div id="slider" class="nivoSlider" style="width: 720px; height: 500px">
        {% set style = "" %}
        {% for image in product.getImages() %}
            <img src="{{ asset(image_product_big_url~'/'~image.getBigName()) }}" style="{{ style }}">
            {% set style = "display: none; padding-top: 0px" %}
        {% endfor %}
    </div>

    <div id="order_button">
        <a href="{{ path('shop_order', {'id': product.getId()}) }}" rel="nofollow">Zamów</a>
    </div>

    <article class="full_description">{{ product.getDescription() }}</article>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('slider/nivo-slider.css') }}" type="text/css" media="screen">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
    <script src="{{ asset('slider/jquery.nivo.slider.pack.js') }}"></script>
    <script src="{{ asset('js/product.js') }}"></script>
{% endblock %}
