{% extends 'layout/base-with-sidebar.html.twig' %}

{% block title %}Serwis próbkowy - decARTe{% endblock %}

{% block contents %}
    <img src="/img/samples-form.jpg" alt="Serwis próbkowy" class="samples-header" />

    <h2 class="samples">Koszt: 15 PLN ({{ samples_count }} dowolne zaproszenia z losowym nadrukiem; wysyłka w cenie próbnika)</h2>

    <p class="samples-remark">Numer konta do wpłaty otrzymają Państwo w mailu.</p>

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    {{ form_start(form) }}

    <div class="samples-products">
        {% for item in form.items %}
            {{ form_row(item.product, {'label': 'Zaproszenie nr '~loop.index}) }}
        {% endfor %}
    </div>

    {{ form_row(form.email) }}
    {{ form_row(form.name) }}
    {{ form_row(form.address) }}
    {{ form_row(form.postal_code) }}
    {{ form_row(form.city) }}
    {{ form_row(form.notes) }}
    {{ form_end(form) }}
{% endblock %}
