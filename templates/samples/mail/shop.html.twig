        <img
            src="{{ absolute_url(asset(image_product_url~'/'~product.getCoverImage().getImageName()) | imagine_filter('product_thumb')) }}"
            width="{{ image_product_small_width }}"
            height="{{ image_product_small_height }}"
            border="1"><br>
        Pr√≥bka nr {{ loop.index }}:
        {{ product.getProductCollection().getName() }}
