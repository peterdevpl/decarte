{% extends 'layout/base-with-sidebar.html.twig' %}

{% block title %}{% trans %}order.shipping_details{% endtrans %} - decARTe{% endblock %}

{% block contents %}
    <h1><span class="step">Krok 1 z 2:</span> {% trans %}order.enter_shipping_details{% endtrans %}</h1>

    <p class="alert alert-secondary" role="alert">
        {% trans %}order.further_details{% endtrans %}
    </p>

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    {{ form_start(form) }}

    {{ form_row(form.name) }}
    {% if form.offsetExists('street') %}{{ form_row(form.street) }}{% endif %}
    {% if form.offsetExists('postalCode') %}{{ form_row(form.postalCode) }}{% endif %}
    {% if form.offsetExists('city') %}{{ form_row(form.city) }}{% endif %}
    {{ form_row(form.email) }}
    {{ form_row(form.phone) }}

    <h2>{% trans %}form.notes_and_questions{% endtrans %}</h2>

    {{ form_row(form.notes) }}

    {{ form_end(form) }}
{% endblock %}
