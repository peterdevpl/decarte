{% extends '@App/layout/base-with-sidebar.html.twig' %}

{% block title %}{{ productType.getName() }} - decARTe{% endblock %}

{% block contents %}
    {{ productType.getDescription()|raw }}

    <ul id="collections" class="figures figures-hover">
        {% for productCollection in productCollections %}
            <li>
                <figure>
                    <img
                        src="{{ asset(image_collection_url~'/'~productCollection.getImageName()) | imagine_filter('product_collection_thumb') }}"
                        width="{{ image_collection_width }}"
                        height="{{ image_collection_height }}"
                        alt="{{ productCollection.getName() }}">
                    <figcaption>
                        <h2>{{ productCollection.getName() }}</h2>
                        <p class="description">{{ productCollection.getShortDescription()|raw }}</p>
                        <a href="{{ path('shop_view_collection', {'type': productType.getSlugName(), 'slugName': productCollection.getSlugName()}) }}">zobacz</a>
                    </figcaption>
                </figure>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
